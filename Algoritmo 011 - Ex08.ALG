 algoritmo "exercicio08"

 var

     Area, Comprimento, raio: real

 inicio

     escreva ("Valor do raio? ")
     leia(raio)

     Area <- 3.1415 * raio ^ 2
     
     Comprimento <- 2 * 3.1415 * raio
     
     escreval ("Area = ", Area)
     escreval ("Comprimento = ", Comprimento)
     

 fimalgoritmo