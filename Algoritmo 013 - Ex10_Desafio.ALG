algoritmo "exercicio10desafio"

var

       bmenor, bmaior , h, area:real

inicio

      escreval("Digite valor base menor: ")
      leia(bmenor)
      escreval("Digite valor base maior: ")
      leia(bmaior)
      escreval ("Digite valor altura: ")
      leia(h)

      area <- ((bmenor + bmaior)/ 2) * h
      
      escreval("Area do trapézio: ",area:7:4)

fimalgoritmo